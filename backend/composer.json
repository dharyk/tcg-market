{
    "autoload": {
        "psr-4": {
            "TcgMarket\\": "classes/",
            "Controller\\": "controllers/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TcgMarket\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "guzzlehttp/psr7": "^2",
        "league/flysystem": "^3.27",
        "ramsey/uuid": "^4.7",
        "slim/slim": "4.*"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.1"
    },
    "scripts": {
        "test": "./vendor/bin/phpunit --testsuite TcgMarket"
    }
}
