{
    "autoload": {
        "psr-4": {
            "TcgMarket\\": "classes/",
            "Controller\\": "controllers/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "TcgMarket\\Tests\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "composer/package-versions-deprecated": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true
        },
        "apcu-autoloader": false,
        "optimize-autoloader": true,
        "sort-packages": true
    },
    "require": {
        "aura/sql": "^5.0",
        "guzzlehttp/psr7": "^2",
        "league/flysystem": "^3.27",
        "monolog/monolog": "^3.5",
        "nesbot/carbon": "^3.2",
        "php-di/slim-bridge": "^3.4",
        "ramsey/uuid": "^4.7",
        "slim/slim": "4.*",
        "zeuxisoo/slim-whoops": "^0.7.3"
    },
    "require-dev": {
        "phpmd/phpmd": "^2.15",
        "phpspec/prophecy-phpunit": "^2.2",
        "phpstan/extension-installer": "^1.3",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^11.1",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "scripts": {
        "test": "XDEBUG_MODE=coverage ./vendor/bin/phpunit --testsuite TcgMarket",
        "stan": "./vendor/bin/phpstan analyse --ansi --no-progress -c phpstan.neon --error-format=prettyJson > reports/phpstan.json",
        "cs": "./vendor/bin/phpcs -p --standard=PSR12 --colors --parallel=25 --basepath=. --extensions=php --encoding=utf8 --report=full classes/* controllers/*",
        "md": "./vendor/bin/phpmd classes controllers text phpmd.xml"
    }
}
